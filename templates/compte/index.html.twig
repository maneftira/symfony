{% extends 'home/home.html.twig' %}

{% block title %}Compte
{% endblock %}


{% block body %}

	<center class="container fluid col-10 mt-5 ">

		<div id="colorlib-main" class=' mt-3'>
			<h1 class="h3 mb-3 font-weight-normal ">Paramètres du compte</h1>
			<hr>

			<table>
				<tr>
					<td width="30%">Nom</td>
					<td width="70%" style="text-align: center;">{{user.nom}}</td>
				</tr>
				<tr>
					<td>Prénom</td>
					<td width="70%" style="text-align: center;">{{user.prenom}}</td>
				</tr>
				<tr>
					<td>Siret</td>
					<td width="70%" style="text-align: center;">{{user.Siret}}</td>
				</tr>
				<tr>
					<td>Téléphone</td>
					<td width="70%" style="text-align: center;">{{user.telephone}}</td>
					<td>
						<div>
							<button class=" btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModalCenter1">modifier</button>
						</td>
					</td>
				</tr>
				<tr>
					<td>Email</td>
					<td width="70%" style="text-align: center;">{{user.email}}</td>
					<td>
						<div>
							<button class=" btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModalCenter2">modifier</button>
						</td>
					</td>
				</tr>
				<tr>
					<td>Password</td>
					<td width="70%" style="text-align: center;">******</td>
                    <td>
						<div>
							<button class=" btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModalCenter3">modifier</button>
						</td>
					</td>
				</tr>
				<tr>
					<td>Num Sécurité Sociale</td>
					<td width="70%" style="text-align: center;">{{user.numSecSociale}}</td>
				</tr>


			</table>


		</div>

	</center>

	<!-- Modal -->
	<div class="modal fade" id="exampleModalCenter1" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalCenterTitle">Nouveau Téléphone</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					{{form_start(form)}}
					{{ form_row(form.telephone) }}

				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					{{ form_row(form.submit) }}
				</div>
				{{ form_end(form) }}
			</div>

		</div>
	</div>
	<div class="modal fade" id="exampleModalCenter2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalCenterTitle">Nouveau Email</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					{{form_start(formEmail)}}
					{{ form_row(formEmail.email) }}

				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					{{ form_row(formEmail.submit) }}
				</div>
				{{ form_end(formEmail) }}
			</div>

		</div>
	</div>
    <div class="modal fade" id="exampleModalCenter3" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalCenterTitle">Nouveau Mot de passe</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					{{form_start(formPassword)}}
					{{ form_row(formPassword.mot_de_Passe) }}

				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					{{ form_row(formPassword.submit) }}
				</div>
				{{ form_end(formPassword) }}
			</div>

		</div>
	</div>
{% endblock %}
