{% extends 'home/home.html.twig' %}

{% block title %}Modification
{% endblock %}
{% block body %}
	{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

	<center class="container fluid col-10">

		<div id="colorlib-main" class=' mt-3'>
			{{ form_start(form) }}
			<h1 class="h3 mb-3 font-weight-normal ">
				Modification</h1>
			<fieldset style="width:auto ; border: 1px  solid #cacaca; border-radius:8px;padding:6px;">
				<legend class="w-auto">Information Personnelles</legend>
				{{ form_row(form.nom) }}
				{{ form_row(form.prenom,{'label': 'Prénom'}) }}
				{{ form_row(form.sex) }}
				{{ form_row(form.nationnalite,{'label': 'Nationnalité'} )}}
				{{ form_row(form.DateN,{'label': 'Date de naissance'}) }}
				{{ form_row(form.LieuN,{'label': 'Lieu de naissance'}) }}
				{{ form_row(form.adresse)}}
				{{ form_row(form.municipalite)}}
				{{ form_row(form.codePostal) }}
			</fieldset>
			<fieldset class="mt-3" style="width:inherit; border: 1px solid #cacaca; border-radius:8px;padding:6px;">
				<legend class="w-auto">Etablissement</legend>
				{{ form_row(form.adresseAffaire,{'label': 'Adresse d\'affaire'})}}
		{{ form_row(form.municipaliteAffaire,{'label': 'Municipalite d\'affaire'})}}
				{{ form_row(form.codePostalAffaire,{'label': 'Code Postal d\'affaire'}) }}
		</fieldset>
    <fieldset class="mt-3" style="width:inherit; border: 1px solid #cacaca; border-radius:8px;padding:6px;">
		<legend class="w-auto">Activité</legend>
        {{ form_row(form.dateActivite,{'label': 'Date de début d\'activite'})}}
				{{ form_row(form.saisonniere,{'label': 'Activité saisonniére'})}}
				{{ form_row(form.domaine,{'label': 'Domaine'}) }}
				{{ form_row(form.activites,{'label': 'l\'ensemble des activites exercées'}) }}
    </fieldset>
    <fieldset class="mt-3" style="width:inherit; border: 1px solid #cacaca; border-radius:8px;padding:6px;">
		<legend class="w-auto">Declaration sociale</legend>
        {{ form_row(form.numSecScoiale,{'label': 'Num de sécurité sociale'})}}
		{{ form_row(form.activiteSimulat,{'label': 'Exercez-vous simultanément une autre activité, Si oui, serez-vous simultanément'}) }}
        {{ form_row(form.regimeAssurance,{'label': 'régime d\'assurance maladie actuel '}) }}
			</fieldset>
			<fieldset class="mt-3 mb-3" style="width:inherit; border: 1px solid #cacaca; border-radius:8px;padding:6px;">
				<legend class="w-auto">Plus d'information</legend>
				{{ form_row(form.telephone,{'label': 'Téléphone'})}}
				{{ form_row(form.fax)}}
				{{ form_row(form.email) }}
			</fieldset>
			<fieldset class="mt-3 mb-3" style="width:inherit; border: 1px solid #cacaca; border-radius:8px;padding:6px;">
				<legend class="w-auto">Signataire</legend>
				{{ form_row(form.fait,{'label': 'Fait à'})}}
				{{ form_row(form.date,{'label': 'Le'} )}}
			</fieldset>

			<div class="mr-5">
				{{ form_row(form.Envoyer)}}
			</div>
			{{ form_end(form) }}
		</div>
	</center>
	
{% endblock %}
