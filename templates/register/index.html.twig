{% extends 'home/home.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

	<center class="container col-8" style="position: absolute">
		
		<div  class=' mt-3'>
		<h1 class="h3 mb-3 font-weight-normal ">S'inscrire</h1>
			{{ form_start(form) }}
			<fieldset style="width:inherit;  border-radius:8px;padding:6px;">
				{{ form_row(form.nom) }}
				{{ form_row(form.prenom,{'label': 'Prénom'}) }}
				{{ form_row(form.telephone,{'label': 'Téléphone'} )}}
				{{ form_row(form.email) }}
				{{ form_row(form.password,{'label': 'Mot de passe'}) }}
				{{ form_row(form.siret)}}
				{{ form_row(form.numSecSociale,{'label': 'Num de Securité Sociale'})}}
			</fieldset>
			<div class="text-center mt-2">
				{{ form_row(form.Envoyer,{'label':'Création de compte'})}}
			</div>
			{{ form_end(form) }}
		</div>
	</center>
{% endblock %}
